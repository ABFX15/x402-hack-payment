{
  "name": "@settlr/sdk",
  "version": "0.4.3",
  "description": "Settlr SDK - Accept Solana USDC payments in games and apps. Email checkout, gasless transactions, no wallet required. The easiest way to add crypto payments.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "settlr",
    "settlr-sdk",
    "settlr.dev",
    "solana",
    "solana-payments",
    "usdc",
    "usdc-payments",
    "crypto-payments",
    "web3",
    "web3-payments",
    "stablecoin",
    "gasless",
    "gasless-transactions",
    "payment-gateway",
    "checkout",
    "gaming-payments",
    "game-monetization",
    "in-app-purchases",
    "react",
    "typescript",
    "email-checkout",
    "no-wallet",
    "privy"
  ],
  "author": "Settlr <hello@settlr.dev> (https://settlr.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ABFX15/x402-hack-payment.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/ABFX15/x402-hack-payment/issues"
  },
  "homepage": "https://settlr.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/ABFX15"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.7",
    "react": "^19.2.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
